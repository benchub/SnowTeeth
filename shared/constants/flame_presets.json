  "bucketMappingAlternateAscent": {
    "IDLE": "idle",
    "DOWNHILL_EASY": "easy",
    "DOWNHILL_MEDIUM": "medium",
    "DOWNHILL_HARD": "hard",
    "UPHILL_EASY": "alternateAscent",
